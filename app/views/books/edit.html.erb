<div class="containar">
  
  <div class="row">
    
    <div class="col-4"></div>
    
    <div class="col-5">
      
      <h1>Editing Book</h1>
    
<% if @book.errors.any? %>

  <div>
    
    <h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
    
    <ul>
      
      <% @book.errors.full_messages.each do |message| %>
      
        <li><%= message %></li>
        
      <% end %>
      
    </ul>
    
  </div>
  
  <% end %>
    
  <%= form_with model: @book do |f| %>
  
    <p>Title</p>
    
    <%= f.text_field :title, maxlength: 20, class:"area" %>
    
    <p>Opinion</p>
    
    <%= f.text_area :body, maxlength: 50, class:"area" %>
    
    <div><%= f.submit "Update Book", class:"btn btn-success my-3" %></div>
    
  <% end %>
  
  <label class="my-2"><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path  %></label>
  
  </div>
  
  
  
  <div class="col-3"></div>

  </div>

</div>