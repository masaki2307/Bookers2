<div class="container">
  
  <div class="row">
      
    <div class="col-md-3">

       <%= render 'list', books: @books %>
      
    </div>
      
      <div class="col-md-8 offset-md-1">
    
        <h2>Book detail</h2>
        
        <table class="table">
          
         
          <tbody>
            
            <tr>
            
            <td class="image-show border-top">
              
              <%= link_to user_path(@user.id) do %>
              
              <%= image_tag @book.user.get_profile_image(100,100)%>
            
              <div><%= @book.user.name %></div>
            
              <% end %>
            
            </td>
            
            <td class="p-3 border-top "><%= link_to @book.title, book_path(@book.id) %></td>
            
            <td class="p-3 border-top"><%= @book.body%></td>
            
            <% if @book.user == current_user %>
            
            <td class="p-3 border-top"><%= link_to "Edit" , edit_book_path(@book.id), class: "btn btn-success mx-5" %></td>
             
            <td class="p-3 border-top"><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" , class: "btn btn-danger" %></td>
            
            <% end %>
            
            </tr>
            
          </tbody>
          
        </table>
        
    </div>
     
  </div>

</div>

