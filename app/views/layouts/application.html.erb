<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/f450608d4b.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <heder>
      
         <div class="container-fluid">

            <div class="header row py-3">

                <div class="col-2"></div>

                 <div class="col-2">

                   <div><%= link_to  "Bookers", root_path, class: "hoc text-light font-weight-bold " %></div>

                 </div>

                       <div class="col-5 offset-3">

                          <div class="row">

                              <% if user_signed_in? %>
                              
                                <li class="px-2">
  
                                    <%= link_to user_path(current_user.id), class: "text-light" do  %>
  
                                      <i class="fa-solid fa-house"></i> Home
  
                                    <% end %>
  
                                </li>

                                <li class="px-2">

                                  <%= link_to  users_path, class: "text-light" do %>

                                    <i class="fa-solid fa-users"></i> Users

                                  <% end %>

                                </li>

                                <li class="px-2">

                                  <%= link_to books_path, class: "text-light" do %>

                                    <i class="fa-sharp fa-solid fa-book-open"></i> Books

                                   <% end %>

                                </li>

                                <li class="px-2">

                                  <%= link_to  destroy_user_session_path, method: :delete , class: "text-light" do %>

                                     <i class="fa-solid fa-right-from-bracket"></i> Log out

                                  <% end %>

                                </li>

                              <% else %>
                              
                                <li class="px-2">
    
                                      <%= link_to  root_path, class: "text-light" do  %>
    
                                        <i class="fa-solid fa-house"></i> Home
    
                                      <% end %>
    
                                </li>

                                <li class=" px-2">

                                  <%= link_to about_path, class: "text-light" do %>

                                    <i class="fa-solid fa-link"></i> About

                                  <% end %>

                                </li>

                                <li class="px-2">

                                  <%= link_to new_user_registration_path, class: "text-light" do %>

                                    <i class="fa-solid fa-user-plus"></i> Sign up

                                  <% end %>

                                <li class="px-2">

                                  <%= link_to new_user_session_path, class: "text-light" do %>

                                    <i class="fa-solid fa-right-to-bracket"></i> Log in

                                  <% end %>

                                </li>

                              <% end %>

                           </div>

                       </div>

                    </div>

               </div>
               
    </heder>
    <main>
      
       <% flash.each do |message_type, message| %>

        <div class="flash-message <%= message_type %>"><%= message %></div>

        <% end %>

        <%= yield %>
    
    </main>
 
    <footer>

     <div class="containar">

      <div class="row">
        
        <div class="col-4"></div>
    
            <div class="col-4">
              
              <div class="row">
                
                <div class="col-2"></div>

              <p> CopyRight Infratop.inc</p>
                  
            </div>
            <div class="col-4"></div>
            
        </div>
        
    </div>

    </footer>
  </body>

</html>
